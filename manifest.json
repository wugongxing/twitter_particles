{
  "manifest_version": 3,
  "name": "Twitter Gray Background",
  "version": "1.0",
  "description": "Changes the background color of Twitter to light gray.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*","*://*.baidu.com/*"],
      "js": ["content_script.js","js/particles.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
  "16": "/images/get_started16.png",
  "32": "/images/get_started32.png",
  "48": "/images/get_started48.png",
  "128": "/images/get_started128.png"
  }
}